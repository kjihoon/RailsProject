<h1>Posts#index</h1>
<div class="container">
  <div class="row justify-content-md-center">

<h1><a href="/posts/new">new</a></h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">username</th>
      <th scope="col">title</th>
      <th scope="col">edit</th>
      <th scope="col">del</th>

    </tr>
  </thead>
  <tbody>
<% @posts.each do |p|%>
  <tr>
    <td> <%= p.username %> </td>
    <td><a href="/posts/<%= p.id %>/show"> <%= p.title %></a>  </td>
    <td><a href="/posts/<%= p.id %>/edit">edit</a> </td>
    <td><a href="/posts/<%= p.id %>/destroy" >del</a> </td>

  </tr>
<%end%>
  </tbody>
  </table>
</div>
</div>
