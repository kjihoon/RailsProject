<!DOCTYPE html>
<html>
<head>
  <title>BoardGem</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
</head>
<body>
<%# gravatar(current_user) %>
<% flash.each do |key, value| %>
  <div class="<%= flash_message(key) %>" role="alert">
    <%= value %>
  </div>
<% end %>

<% if user_signed_in? %>
  <%= image_tag current_user.profile_img, class: "rounded-circle" %>
  <span><%= current_user.email %></span>
  <%= link_to '로그아웃', destroy_user_session_path, method: :delete %>
<% else %>
  <!-- <a href="/users/sign_in">로그인</a> -->
  <%= link_to '로그인', new_user_session_path %>
  <!-- <a href="/users/sign_up">회원가입</a> -->
  <%= link_to '회원가입', new_user_registration_path %>
<% end %>
<div class="container">
  <%= yield %>
</div>
